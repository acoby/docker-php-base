# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
#logfile        ~/.msmtp.log

# default account
account        default
host           {MAIL_HOST}
port           {MAIL_PORT}
from           {MAIL_USERNAME}
user           {MAIL_PASSWORD}
password       {MAIL_ADDRESS}

# Map local users to mail addresses (for crontab)
aliases /etc/aliases
